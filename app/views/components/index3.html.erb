  <label for="sort_by">Sort by:</label>
  <select name="sort_by" id="sort_by" data-action="post-sort#update" data-post-sort-target="select">
    <option value="time_posted" <%= 'selected' if params[:sort_by] == 'time_posted' %>>Newest</option>
    <option value="time_posted_reverse" <%= 'selected' if params[:sort_by] == 'time_posted_reverse' %>>Oldest</option>
    <option value="alphabetical" <%= 'selected' if params[:sort_by] == 'alphabetical' %>>A-Z</option>
    <option value="alphabetical_reverse" <%= 'selected' if params[:sort_by] == 'alphabetical_reverse' %>>Z-A</option>
  </select>
</div>
